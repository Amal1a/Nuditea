---
import Toggle from "../components/Toggle.astro";
import Scrollarrow from "../components/Scrollarrow.astro";
import Navbar from "../components/Navbar.astro";
import Quotes from "../components/Quotes.astro";
import Mainlayout from "../components/Mainlayout.astro";
import "../styles/master.css";
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <meta name="robots" content="noindex, nofollow" />
  <meta
    name="description"
    content="Din spirituelle bubble tea butik! Mælke te - Frugt te - Stort udvalg - Høj kvalitet - 100% Platebaseret - God energi - Besøg os på Søborg Torv 7, 2860 Søborg"
  />
</head>

<header>
  <Navbar />
</header>

<div class="ToggleButt">
  <Toggle />
  <Scrollarrow />
</div>

<div>
  <Quotes />
</div>

<style>
  .ToggleButt {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 5rem;
  }
</style>
