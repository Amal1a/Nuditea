      object-fit: cover;
    }

    .kontakt {
      color: #d9960a;
    }

    #footercontent {
      display: flex;

      justify-content: space-between;
      align-items: center;
      padding: 5rem;
    }

    .copyright {
      color: #d9960a;
      display: flex;
      align-self: end;
    }

    .firstrow,
    .secondrow {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.2rem;
    }
