<style>
.frame_container{
    width: 100%;
}
.big{
    background-image: url("../imgs/frame_big.jpg");
    background-repeat: no-repeat;
    height: 1155px;
    width: 743px;
    position: relative;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 6fr 8fr 11fr;
    padding: 0;
}

#handsvg{
    width: 11.5rem;
    position:absolute;
    left: 45%;
    top: 10%;
}
#crystalsvg{
    width: 9rem;
    position:absolute;
    left: 65%;
    bottom: 10%;
}

h2{
    grid-column: 2/3;
    justify-self: start;
    height: fit-content;
    align-self: end;

    font-size: 40px;
}
.firstsection{
    grid-column: 2/4;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    height: fit-content;
    padding-left: 0;
}
.secondsection{
    grid-column: 2/4;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 2fr 1fr 8fr;
    height: fit-content;
    padding-left: 0;
}

.firstsection h3, .secondsection h3{
    grid-column: 1/5;
    justify-self: start;
    align-self: center;
    margin-bottom: 0;
}
.secondsection p{
    font-style: italic;
    font-size: 16px;
    grid-row: 2/3;
    grid-column: 1/4;
    margin-top: 0.5rem;
}
.secondsection .first_column{
    grid-row: 3/4;
}


.first_column{
    list-style: none;
    width: 14rem;
    grid-column: 1/3;
    justify-self: start;
    padding: 0;
    height: fit-content;

    font-size: 24px;
}
.second_column{
    width: fit-content;
    list-style: none;
    grid-column: 3/5;
    justify-self: start;
    height: fit-content;

    font-size: 24px;
}
h3{
    font-size: 30px;
}

@media (max-width: 600px) {
    .framebackground{
    background-image: none;
    background-color: aqua;
}
  }
</style>